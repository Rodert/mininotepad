.container {
  padding: 40rpx 30rpx;
  background: #ffffff;
  min-height: 100vh;
}

.user-card {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
}

.avatar-container {
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #e9ecef;
  border: 4rpx solid #ffffff;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 36rpx;
  color: #2c3e50;
  font-weight: 500;
  display: block;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
}

.user-id {
  font-size: 26rpx;
  color: #7f8c8d;
  display: block;
  letter-spacing: 0.5rpx;
}

.function-list {
  background: #f8f9fa;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
}

.function-item {
  padding: 0 30rpx;
}

.function-content {
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid rgba(0,0,0,0.03);
}

.function-item:last-child .function-content {
  border-bottom: none;
}

.function-text {
  font-size: 30rpx;
  color: #2c3e50;
  letter-spacing: 0.5rpx;
}

.arrow {
  font-size: 30rpx;
  color: #95a5a6;
}

.version-info {
  text-align: center;
  font-size: 26rpx;
  color: #95a5a6;
  margin-top: 80rpx;
  letter-spacing: 0.5rpx;
}