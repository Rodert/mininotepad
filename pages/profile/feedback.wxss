.feedback-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.feedback-popup.show {
  visibility: visible;
  opacity: 1;
}

.feedback-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.feedback-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.feedback-popup.show .feedback-content {
  transform: translateY(0);
}

.feedback-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.feedback-options {
  margin-bottom: 30rpx;
}

.feedback-item {
  padding: 24rpx;
  background: #f6f8fa;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.feedback-item:active {
  opacity: 0.8;
}

.feedback-item-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.feedback-item-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.feedback-close {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 28rpx;
}

.feedback-close:active {
  opacity: 0.8;
}