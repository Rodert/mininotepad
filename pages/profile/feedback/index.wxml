<view class="feedback-popup {{show ? 'show' : ''}}">
  <view class="feedback-mask" bindtap="onClose"></view>
  <view class="feedback-content">
    <view class="feedback-header">
      <text class="feedback-title">反馈与帮助</text>
      <view class="feedback-close" bindtap="onClose">×</view>
    </view>
    
    <view class="feedback-options">
      <view class="feedback-item" bindtap="onTapFeedbackType" data-type="contact">
        <view class="feedback-item-icon">💬</view>
        <view class="feedback-item-content">
          <text class="feedback-item-text">联系客服</text>
          <text class="feedback-item-desc">联系在线客服</text>
        </view>
        <text class="feedback-item-arrow">></text>
      </view>

      <view class="feedback-item" bindtap="onTapFeedbackType" data-type="help">
        <view class="feedback-item-icon">📖</view>
        <view class="feedback-item-content">
          <text class="feedback-item-text">使用说明</text>
          <text class="feedback-item-desc">查看使用帮助</text>
        </view>
        <text class="feedback-item-arrow">></text>
      </view>

      <view class="feedback-item" bindtap="onTapFeedbackType" data-type="feature">
        <view class="feedback-item-icon">🎉</view>
        <view class="feedback-item-content">
          <text class="feedback-item-text">新增功能留言</text>
          <text class="feedback-item-desc">如果您有功能需求，点击这里</text>
        </view>
        <text class="feedback-item-arrow">></text>
      </view>
    </view>
  </view>
</view>