.feedback-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease-in-out;
}

.feedback-popup.show {
  visibility: visible;
  opacity: 1;
}

.feedback-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
}

.feedback-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease-in-out;
}

.show .feedback-content {
  transform: translateY(0);
}

.feedback-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.feedback-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.feedback-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.feedback-options {
  padding: 20rpx 0;
  max-height: 70vh;
  overflow-y: auto;
}

.feedback-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin: 0 20rpx;
  border-radius: 12rpx;
  background-color: #fff;
  transition: background-color 0.2s ease;
}

.feedback-item:active {
  background-color: #f5f5f5;
}

.feedback-item-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.feedback-item-content {
  flex: 1;
}

.feedback-item-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.feedback-item-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
}

.feedback-item-arrow {
  font-size: 32rpx;
  color: #ccc;
  margin-left: 20rpx;
}