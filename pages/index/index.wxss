/* pages/index/index.wxss */

.container {
  padding: 40rpx 30rpx;
  padding-bottom: 300rpx;
  background: #ffffff;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.date-display {
  font-size: 36rpx;
  color: #2c3e50;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.98);
  padding: 30rpx;
  box-shadow: 0 -10rpx 30rpx rgba(0,0,0,0.03);
  z-index: 100;
  backdrop-filter: blur(20px);
  border-top: 1px solid rgba(0,0,0,0.02);
}

.input-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  max-width: 1200rpx;
  margin: 0 auto;
}

.todo-input {
  flex: 0.75;
  padding: 24rpx 30rpx;
  font-size: 30rpx;
  border: none;
  border-radius: 16rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
  height: 88rpx;
  box-sizing: border-box;
}

.todo-input:focus {
  background: #ffffff;
  box-shadow: 0 0 0 2rpx #3498db20;
}

.add-btn {
  flex: 0.25;
  padding: 0 40rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #3498db;
  color: #ffffff;
  font-size: 30rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  border: none;
  font-weight: 500;
  letter-spacing: 1rpx;
  white-space: nowrap;
}

.add-btn:active {
  transform: translateY(2rpx);
  background: #2980b9;
}

.filter {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
  background: #f8f9fa;
  padding: 8rpx;
  border-radius: 12rpx;
}

.filter text {
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #7f8c8d;
  position: relative;
  padding: 16rpx 30rpx;
  transition: all 0.3s ease;
  border-radius: 8rpx;
}

.filter .active {
  color: #3498db;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.todo-list {
  background: transparent;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.todo-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #f8f9fa;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.todo-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
}

.todo-content {
  display: flex;
  align-items: center;
  flex: 1;
  width: 0;
  min-width: 0;
  margin-right: 20rpx;
}

.todo-info {
  margin-left: 24rpx;
  flex: 1;
  min-width: 0;
  width: 0;
  overflow: hidden;
}

.todo-text {
  font-size: 30rpx;
  color: #2c3e50;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
  letter-spacing: 0.5rpx;
}

.todo-date {
  font-size: 24rpx;
  color: #95a5a6;
  margin-top: 8rpx;
}

.todo-text.completed {
  text-decoration: line-through;
  color: #95a5a6;
}

.delete-btn {
  color: #e74c3c;
  font-size: 32rpx;
  padding: 16rpx 24rpx;
  opacity: 0.8;
  transition: all 0.3s ease;
}

.delete-btn:active {
  opacity: 1;
}

.statistics {
  text-align: center;
  font-size: 26rpx;
  color: #7f8c8d;
  background: #f8f9fa;
  padding: 24rpx;
  border-radius: 16rpx;
  letter-spacing: 0.5rpx;
}

.switch-btn {
  padding: 0 40rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #f8f9fa;
  color: #7f8c8d;
  font-size: 30rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  border: none;
  margin-left: 20rpx;
  letter-spacing: 0.5rpx;
}