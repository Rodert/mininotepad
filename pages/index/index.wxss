/* pages/index/index.wxss */

.container {
  padding: 30rpx;
  padding-bottom: 300rpx;
  background: #f6f8fa;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.date-display {
  font-size: 32rpx;
  color: #1890ff;
  font-weight: bold;
}

.input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 24rpx 30rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.06);
  z-index: 100;
  backdrop-filter: blur(10px);
  border-top: 1px solid rgba(0,0,0,0.03);
}

.input-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  max-width: 1200rpx;
  margin: 0 auto;
  padding: 0 16rpx;
}

.todo-input {
  flex: 0.75;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  border: none;
  border-radius: 12rpx;
  background: #ffffff;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  height: 80rpx;
  box-sizing: border-box;
}

.todo-input:focus {
  background: #ffffff;
  box-shadow: inset 0 0 0 1px #1890ff, 0 2rpx 8rpx rgba(24,144,255,0.1);
}

.add-btn {
  flex: 0.25;
  padding: 0 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #07C160;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  border: none;
  white-space: nowrap;
  box-shadow: 0 2rpx 8rpx rgba(24,144,255,0.2);
}

.add-btn:active {
  transform: translateY(2rpx);
  background: #096dd9;
  box-shadow: 0 1rpx 4rpx rgba(24,144,255,0.2);
}

.filter {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
  background: #fff;
  padding: 12rpx;
  border-radius: 8rpx;
  box-shadow: 0 1rpx 2rpx rgba(0,0,0,0.03);
}

.filter text {
  margin: 0 30rpx;
  font-size: 24rpx;
  color: #999;
  position: relative;
  padding: 12rpx 20rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.filter .active {
  color: #1890ff;
  font-weight: normal;
  transform: scale(1.05);
}

.filter .active:after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 50%;
  width: 24rpx;
  height: 2rpx;
  background: #1890ff;
  transform: translateX(-50%);
  transition: all 0.3s ease;
}

.filter text:hover {
  opacity: 0.8;
  transform: translateY(-1rpx);
}

.todo-list {
  background: transparent;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.todo-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}

.todo-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.todo-content {
  display: flex;
  align-items: center;
  flex: 1;
  width: 0;
  min-width: 0;
  margin-right: 20rpx;
}

.todo-info {
  margin-left: 20rpx;
  flex: 1;
  min-width: 0;
  width: 0;
  overflow: hidden;
}

.todo-text {
  font-size: 28rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
}

.todo-date {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.todo-text.completed {
  text-decoration: line-through;
  color: #999;
}

.delete-btn {
  color: #ff4d4f;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}

.statistics {
  text-align: center;
  font-size: 24rpx;
  color: #666;
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.switch-btn {
  flex: 0.25;
  padding: 0 32rpx;
  height: 68rpx;
  line-height: 68rpx;
  background: #f6f8fa;
  color: #666;
  font-size: 28rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
  border: 1px solid rgba(0,0,0,0.05);
  white-space: nowrap;
  margin-left: 16rpx;
}

.switch-btn:active {
  transform: translateY(2rpx);
  background: #e6e6e6;
}