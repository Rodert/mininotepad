<!--pages/index/index.wxml-->
<view class="container">
  <!-- 顶部日期显示 -->
  <view class="header">
    <view class="date">{{currentDate}}</view>
  </view>

  <!-- 过滤器 -->
  <view class="filter-section">
    <view class="filter {{filter === 'all' ? 'active' : ''}}" 
          bindtap="setFilter" 
          data-type="all">
      全部 ({{todos.length}})
    </view>
    <view class="filter {{filter === 'active' ? 'active' : ''}}" 
          bindtap="setFilter" 
          data-type="active">
      待完成 ({{activeCount}})
    </view>
    <view class="filter {{filter === 'completed' ? 'active' : ''}}" 
          bindtap="setFilter" 
          data-type="completed">
      已完成 ({{completedCount}})
    </view>
  </view>

  <!-- 待办列表 -->
  <scroll-view class="todo-list" scroll-y="true">
    <block wx:if="{{filteredTodos.length > 0}}">
      <view class="todo-item {{item.completed ? 'completed' : ''}}" 
            wx:for="{{filteredTodos}}" 
            wx:key="id">
        <view class="todo-content" bindtap="toggleTodo" data-id="{{item.id}}">
          <icon class="checkbox" type="{{item.completed ? 'success' : 'circle'}}" size="18"/>
          <text class="todo-text">{{item.text}}</text>
        </view>
        <view class="todo-actions">
          <view class="action-btn detail" bindtap="goToDetail" data-id="{{item.id}}">详情</view>
          <view class="action-btn delete" bindtap="deleteTodo" data-id="{{item.id}}">删除</view>
        </view>
      </view>
    </block>
    <view wx:else class="empty-tip">暂无待办事项</view>
  </scroll-view>

  <!-- 底部输入区域 -->
  <view class="input-section">
    <view class="input-wrapper">
      <input class="todo-input" 
             placeholder="输入待办事项" 
             value="{{newTodo}}" 
             bindinput="onInput"
             bindconfirm="addTodo"/>
      <button class="add-btn" bindtap="addTodo">添加</button>
    </view>
  </view>
</view>