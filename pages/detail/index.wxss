.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.detail-section, .note-section {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.detail-title, .note-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.todo-text {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  word-wrap: break-word;
}

.todo-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.label {
  color: #666;
  margin-right: 10rpx;
}

.priority-high {
  color: #ff4d4f;
}

.priority-normal {
  color: #faad14;
}

.priority-low {
  color: #52c41a;
}

.note-input {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.save-btn, .back-btn {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 30rpx;
}

.save-btn {
  background-color: #07C160;
  color: #fff;
}

.back-btn {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
}