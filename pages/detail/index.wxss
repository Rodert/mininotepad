.container {
  padding: 40rpx 30rpx;
  background-color: #ffffff;
  min-height: 100vh;
}

.detail-section, .note-section {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.detail-title, .note-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #2c3e50;
  margin-bottom: 30rpx;
  letter-spacing: 1rpx;
}

.todo-text {
  font-size: 30rpx;
  color: #2c3e50;
  margin-bottom: 30rpx;
  word-wrap: break-word;
  line-height: 1.6;
  letter-spacing: 0.5rpx;
}

.todo-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.label {
  color: #7f8c8d;
  margin-right: 16rpx;
}

.priority-high {
  color: #ff4d4f;
}

.priority-normal {
  color: #faad14;
}

.priority-low {
  color: #52c41a;
}

.note-input {
  width: 100%;
  height: 240rpx;
  padding: 24rpx;
  box-sizing: border-box;
  border: none;
  border-radius: 12rpx;
  font-size: 30rpx;
  background: #ffffff;
  color: #2c3e50;
  line-height: 1.6;
  letter-spacing: 0.5rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-top: 40rpx;
}

.save-btn, .back-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 16rpx;
  font-size: 30rpx;
  transition: all 0.3s ease;
  letter-spacing: 1rpx;
  font-weight: 500;
}

.save-btn {
  background-color: #3498db;
  color: #ffffff;
}

.save-btn:active {
  background-color: #2980b9;
  transform: translateY(2rpx);
}

.back-btn {
  background-color: #f8f9fa;
  color: #7f8c8d;
  border: none;
}

.back-btn:active {
  background-color: #f1f3f5;
  transform: translateY(2rpx);
}