/* 容器基础样式 */
.container {
  padding: 30rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 卡片通用样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 详情区域样式 */
.detail-title, .note-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.todo-text {
  font-size: 30rpx;
  color: #333333 !important;
  line-height: 1.6;
  margin-bottom: 24rpx;
  word-wrap: break-word;
  background: transparent;
}

.todo-info {
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  color: #666666 !important;
  font-size: 28rpx;
  margin-right: 20rpx;
  min-width: 112rpx;
  background: transparent;
}

.value {
  color: #333333 !important;
  font-size: 28rpx;
  flex: 1;
  word-wrap: break-word;
  word-break: break-all;
  line-height: 1.6;
  background: transparent;
}

/* 状态标签样式 */
.status-tag {
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.status-tag.completed {
  background-color: #e8f5e9;
  color: #4caf50;
}

.status-tag.pending {
  background-color: #fff3e0;
  color: #ff9800;
}

/* 备注输入框样式 */
.note-input {
  width: 100%;
  height: 240rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background: #ffffff;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-wrap;
  color: #333333 !important;
}

/* 操作区域样式 */
.action-area {
  margin-top: 40rpx;
}

.primary-actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

/* 按钮基础样式 */
.primary-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  line-height: 1;
}

/* 保存按钮样式 */
.save-btn {
  background: #07C160;
  color: #fff;
}

/* 次要按钮样式 */
.secondary-btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border: 2rpx solid #eee;
}

.todo-input {
  width: 100%;
  min-height: 80rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  font-size: 30rpx;
  line-height: 1.6;
  background: #ffffff;
  margin-bottom: 24rpx;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-wrap;
  color: #333333 !important;
}

/* 日期选择器样式 */
.date-selector {
  margin: 10rpx 0;
}

.picker-view {
  display: flex;
  align-items: center;
  padding: 8rpx 0;
}

.picker-icon {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}